---
title: Blog
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
{% extends "base-layout.njk" %}
{% block title %}{{ title }} | SolPayments{% endblock %}
{% block main %}
<!-- Hero Start -->
<section class="bg-half-100 d-table w-100" style="background: url('/assets/images/bg/market.png') top;">
    <div class="bg-overlay bg-black opacity-9"></div>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-12">
                <div class="section-title text-center">
                    <h4 class="title text-white title-dark fw-medium mb-4">Blog & News</h4>
                    <p class="text-muted para-desc mx-auto mb-0">
                      We keep you up to date with all that we are thinking of, and all that we are doing.
                    </p>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->
<!-- Hero End -->
<!-- Blog Start -->
<section class="section">
    <div class="container">
      <div class="row">
        {% for post in posts %}
          <div class="col-md-12">
            <div class="card blog blog-primary border-0 rounded shadow overflow-hidden">
              <img src="images/blog/01.jpg" class="img-fluid" alt="">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="text-muted"><time datetime="{{ post.date | dateShort }}">{{ post.date | dateReadable }}</time></span>
                </div>
                <a href="{{ post.url | url }}" class="title text-dark h5">{{ post.data.title }}</a>
                <div class="mt-3">
                  <a href="{{ post.url | url }}" class="link">Read More <i class="uil uil-arrow-right"></i></a>
                </div>
              </div>
            </div>
          </div><!--end col-->
        {% endfor %}
      </div><!--end row-->
      <div class="row">
        <!-- PAGINATION START -->
        <div class="col-12 mt-4 pt-2">
            <ul class="pagination justify-content-center mb-0 mt-3 mt-sm-0">
              {% if pagination.href.previous %}
                <li class="page-item"><a class="page-link" href="{{pagination.href.previous}}" aria-label="Previous Page">Previous Page</a></li>
              {% endif %}
              {% if pagination.href.next %}
                <li class="page-item"><a class="page-link" href="{{pagination.href.next}}" aria-label="Next Page">Next Page</a></li>
              {% endif %}
            </ul>
        </div><!--end col-->
        <!-- PAGINATION END -->
      </div><!--end row-->
  </div><!--end container-->
</section><!--end section-->
<!-- Blog End -->
{% endblock %}