{% extends "base-layout.njk" %}
{% block title %}{{ title }} | SolPayments{% endblock %}
{% block main %}
<section class="bg-half-page d-table w-100 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {{ content | safe }}
            </div>
            <!--end col-->
        </div>
        <!--end row-->
    </div>
    <!--end container-->
    <div class="container mt-100 mt-60">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="section-title text-center">
                    <h4 class="title mb-4">Join Us</h4>
                    <p class="para-desc mx-auto text-muted mb-0">
                        Let's keep in touch through these platforms:
                    </p>
                    <div class="subcribe-form mt-4">
                        <a href="https://twitter.com/SolPayments" class="btn btn-primary mb-1">
                            <i data-feather="twitter" class="fea icon-sm fea-social"></i> Twitter
                        </a>
                        <a href="tg://join?invite=8gaaqfacV00xODE0" class="btn btn-primary mb-1">
                            <i data-feather="send" class="fea icon-sm fea-social"></i> Telegram
                        </a>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->
    </div>
    <!--end container-->
</section>
<!--end section-->
